{
  "compilerOptions": {
    "target": "ES2020", // またはお好みのバージョン
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", // 出力先ディレクトリ
    "rootDir": "./" // ソースファイルのルート
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}